@model e_commerceMVC.Models.Entity.tbl_Product
@{
    ViewBag.Title = "Product";
    Layout = "~/Views/Shared/ProductLayout.cshtml";
}






@using (Html.BeginForm("RProduct", "Home", FormMethod.Post))
{
<table class="table table-striped table-dark rounded-lg w-50 mx-auto mt-5">
    <tr>
        <th colspan="2" class="text-center"><h2>@Model.Product_Info</h2></th>
    </tr>
    <tr>
        <td colspan="2" class="text-center"><img src="@Model.Image_Path" alt="Alternate Text" /></td>
    </tr>
    <tr>
        <td colspan="2" class="text-center"><h3>$@Model.Product_Price</h3></td>
    </tr>
    <tr>
        <td class="ml-4"><button class="btn btn-outline-danger">ADD CART</button></td>
        <td><button type="button" class="btn btn-dark">BUY</button></td>
    </tr>




</table>

    
}